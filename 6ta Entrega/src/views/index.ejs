<%- include('./layouts/header.ejs')%>
  <div class="container">
    <div class="beers-container">
      <% beers.forEach(element=> { %>
        <div class="beer-card">
          <div class="beer-img">
            <img src="<%= element.thumbnail.replace('public/', '') %>" alt="beer">
          </div>
          <div class="beer-title">
            <%= element.name %>: $<%= element.price %>
          </div>
        </div>
        <% }) %>
    </div>
  </div>
  <div id="messages"> Mensajes: </div>
  <form>
    <p> formulario </p>
    <input type="text" id="username" placeholder="Nombre">
    <input type="text" id="text" placeholder="Ingrese algo">
    <input type="submit" value="enviar">
  </form>

  <%- include('./layouts/footer.ejs')%>